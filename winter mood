    <script>
        // –°–æ–∑–¥–∞–µ–º —Å–Ω–µ–∂–∏–Ω–∫–∏
        function createSnowflakes() {
            const snowflakesContainer = document.getElementById('snowflakes');
            const snowflakeCount = window.innerWidth < 480 ? 40 : 80;
            const snowflakeSymbols = ['‚ùÑ', '‚ùÖ', '‚ùÜ', '‚Ä¢'];
            
            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.className = 'snowflake';
                snowflake.innerHTML = snowflakeSymbols[Math.floor(Math.random() * snowflakeSymbols.length)];
                
                const left = Math.random() * 100;
                const delay = Math.random() * 10;
                const duration = Math.random() * 8 + 12;
                const size = Math.random() * 1.5 + 0.8;
                const opacity = Math.random() * 0.5 + 0.3;
                
                snowflake.style.left = `${left}%`;
                snowflake.style.fontSize = `${size}rem`;
                snowflake.style.animationDelay = `${delay}s`;
                snowflake.style.animationDuration = `${duration}s`;
                snowflake.style.opacity = opacity;
                
                snowflakesContainer.appendChild(snowflake);
            }
        }
        
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è —ë–ª–∫–∏
        document.getElementById('tree').addEventListener('click', function() {
            // –°–æ–∑–¥–∞–µ–º —ç—Ñ—Ñ–µ–∫—Ç –º–µ—Ä—Ü–∞–Ω–∏—è —ë–ª–∫–∏
            this.style.filter = 'drop-shadow(0 0 20px rgba(255, 215, 0, 0.8))';
            setTimeout(() => {
                this.style.filter = 'drop-shadow(0 0 10px rgba(120, 219, 226, 0.5))';
            }, 500);
        });
        
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –ø–æ–¥–∞—Ä–∫–∞
        const giftModal = document.getElementById('giftModal');
        const giftBtn = document.getElementById('giftBtn');
        const closeBtn = document.getElementById('closeBtn');
        
        giftBtn.addEventListener('click', function() {
            giftModal.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
        
        closeBtn.addEventListener('click', function() {
            giftModal.classList.remove('active');
            document.body.style.overflow = '';
        });
        
        // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ –∫–ª–∏–∫—É –≤–Ω–µ –æ–∫–Ω–∞
        giftModal.addEventListener('click', function(e) {
            if (e.target === giftModal) {
                giftModal.classList.remove('active');
                document.body.style.overflow = '';
            }
        });
        
        // –ó–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.onload = function() {
            createSnowflakes();
            
            // –ê–Ω–∏–º–∞—Ü–∏—è "–¥—ã—Ö–∞–Ω–∏—è" –¥–ª—è –∫–Ω–æ–ø–∫–∏
            setInterval(() => {
                giftBtn.style.transform = 'scale(1.05) translateZ(25px)';
                setTimeout(() => {
                    giftBtn.style.transform = 'scale(1) translateZ(25px)';
                }, 500);
            }, 2000);
        };
        
        // –ü–∞—Ä–∞–ª–ª–∞–∫—Å —ç—Ñ—Ñ–µ–∫—Ç –¥–ª—è —Ñ–æ–Ω–∞
        document.addEventListener('mousemove', function(e) {
            const x = (window.innerWidth / 2 - e.pageX) / 50;
            const y = (window.innerHeight / 2 - e.pageY) / 50;
            document.querySelector('.winter-bg').style.transform = `translateX(${x}px) translateY(${y}px)`;
        });
    </script>
</body>
